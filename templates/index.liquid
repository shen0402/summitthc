    padding-bottom: 5px;
    font-family: Overpass, sans-serif;
    font-size: 38px;
    line-height: 38px;
    font-weight: 300;
    letter-spacing: 1px;
    color: #331c94;
  }

  #stamped-reviews-widget[data-widget-type=carousel] .stamped-reviews-date {
    color: #000;
    font-size: 13px;
  }

  #stamped-reviews-widget[data-widget-type="carousel"] .stamped-style-color-title {
    color: #331c94 !important;
  }

  #stamped-reviews-widget[data-widget-type=carousel] .stamped-carousel-subtitle.stamped-style-color-star {
    float: none;
    text-align: center;
    margin-right: 0px;
    padding-left: 70px;
  }

  #stamped-reviews-widget[data-widget-type=carousel] .stamped-carousel-buttons div {
    width: auto;
    padding-left: 7px;
    padding-right: 7px;
  }

  #stamped-reviews-widget[data-widget-type=carousel] .stamped-carousel-button-right:before {
    content: url('//cdn.shopify.com/s/files/1/0636/9355/3922/files/arrow-right-solid-2-min-sm.png');
    
  }

  #stamped-reviews-widget[data-widget-type=carousel] .stamped-carousel-button-left:before {
    content: url('//cdn.shopify.com/s/files/1/0636/9355/3922/files/arrow-left-solid-2-min-sm.png');
    
  }

  #stamped-reviews-widget[data-widget-type=carousel] .stamped-carousel-scroll .stamped-reviews-message-block {
    font-size: 16px;
    line-height: 20px;
  }

  #stamped-reviews-widget[data-widget-type=carousel] .stamped-carousel-scroll .stamped-reviews-image a {
    font-size: 12px;
    line-height: 14px;
  }

  #stamped-reviews-widget[data-widget-type=carousel] .stamped-carousel-scroll .stamped-reviews-author {
    font-size: 15px;
    line-height: 18px;
  }

