        prevArrow: '<div class="sk-slick-arrow-wrapper sk-slick-arrow-wrapper-prev"><img src="//cdn.shopify.com/s/files/1/0636/9355/3922/files/arrow-left-solid-2-min.png" class="sk-slick-arrow-img"></div>',
        responsive: [{
          breakpoint: 479,
          settings: {
            slidesToShow: 1,
            slidesToScroll: 1
          }
        }]
      });
    });
  </script>


  <script type="text/javascript">
    $(document).ready(function() { 

      $('.sk-reviews-click-home .stamped-product-reviews-badge').click(function()
